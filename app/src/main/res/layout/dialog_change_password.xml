<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:text="Change Profile"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold|italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/dChangePass_img"
        android:background="#DFDFDC"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>
    <EditText
        android:id="@+id/dChangePass_etCurrent"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:inputType="textPassword"
        android:hint="Enter your current password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/dChangePass_etNew"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:inputType="textPassword"
        android:hint="Enter your new password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/dChangePass_etConfirm"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:inputType="textPassword"
        android:hint="Confirm your password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
   <LinearLayout
       android:orientation="horizontal"
       android:layout_marginTop="10dp"
       android:paddingHorizontal="5dp"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <Button
           android:id="@+id/dChangePass_btnSubmit"
           android:text="Submit"
           android:textAllCaps="false"
           android:layout_weight="1"
           android:layout_width="0dp"
           android:layout_height="wrap_content"/>
       <Button
           android:id="@+id/dChangePass_btnClear"
           android:text="Clear"
           android:textAllCaps="false"
           android:layout_weight="1"
           android:layout_width="0dp"
           android:layout_height="wrap_content"/>
       <Button
           android:id="@+id/dChangePass_btnCancel"
           android:text="Cancel"
           android:textAllCaps="false"
           android:layout_weight="1"
           android:layout_width="0dp"
           android:layout_height="wrap_content"/>
   </LinearLayout>

</LinearLayout>